@page "/project/ticket/{TicketId:int}/properties"

<MudContainer MaxWidth="@MaxWidth.Small">
    <MudGrid Spacing="2" Class="mt-8">
        <MudItem xs="12" md="6" Class="d-flex align-center">
            <MudText Typo="@Typo.h6">Title</MudText>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField T="@string" Text="Title" Variant="@Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex align-center">
            <MudText Typo="@Typo.h6">Type</MudText>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField T="@string" Text="Type" Variant="@Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex align-center">
            <MudText Typo="@Typo.h6">Status</MudText>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField T="@string" Text="Status" Variant="@Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex align-center">
            <MudText Typo="@Typo.h6">Priority</MudText>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField T="@string" Text="Priority" Variant="@Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex align-center">
            <MudText Typo="@Typo.h6">Deadline</MudText>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField T="@string" Text="Deadline" Variant="@Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" Class="d-flex align-center">
            <MudText Typo="@Typo.h6">Description</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudTextField T="@string" Text="Description" Variant="@Variant.Outlined" Lines="15" />
        </MudItem>
    </MudGrid>
    <div class="d-flex justify-center align-center">
        <MudButton Variant="@Variant.Filled"
                   Color="@Color.Primary"
                   EndIcon="@Icons.Material.Filled.Save"
                   Class="mt-4">
            Save changes
        </MudButton>
    </div>
</MudContainer>

@code {

    [Parameter] public int TicketId { get; set; }

}
