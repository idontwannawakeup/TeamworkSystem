@page "/tickets"

<MudText Class="mt-md-12 mb-4" Typo="@Typo.h3" Align="@Align.Left">Your active tickets</MudText>

<MudGrid Spacing="3">
    @foreach (var number in Enumerable.Range(0, 5))
    {
    <MudItem xs="12" sm="6" md="3">
        @if (loaded)
        {
            <TicketCard />
        }
        else
        {
            <TicketCardSkeleton />
        }
    </MudItem>
    }
</MudGrid>

@code {

    private bool loaded = true;

}
