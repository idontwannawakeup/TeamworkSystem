@page "/" 
@layout EmptyLayout
@inject NavigationManager NavigationManager 

<MudContainer MaxWidth="@MaxWidth.ExtraSmall">

    <MudText Class="mt-10 py-1" Typo="@Typo.h3" Align="@Align.Center">
        Hello, User!
    </MudText>

    <MudText Class="py-1" Typo="@Typo.subtitle1" Align="@Align.Center">
        Welcome to TeamworkSystem app.
    </MudText>

    <MudButton Link="/signIn"
               Class="my-2 py-2"
               Color="@Color.Primary"
               Variant="@Variant.Filled"
               FullWidth="@true">
        Sign In
    </MudButton>

    <MudButton Link="/signUp"
               Class="my-2 py-2"
               Color="@Color.Primary"
               Variant="@Variant.Filled"
               FullWidth="@true">
        Sign Up
    </MudButton>

</MudContainer>

@code {
    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);
        NavigationManager.NavigateTo("/project/ticket/2");
    }
}
